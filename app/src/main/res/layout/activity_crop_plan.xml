<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="50"
    tools:context=".CropPlan">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Before selecting your crop you
should have an idea about your climatic conditions."
        android:textSize="25dp"
        android:layout_weight="5"
        android:gravity="center"
        android:textColor="@color/red_600"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No idea Click here"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:layout_weight="2"
        android:onClick="cropSuggestion"
        android:textColor="@color/colorFacebook"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your Crop type"
        android:textSize="20dp"
        android:layout_weight="1"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:entries="@array/CropType"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your Crop"
        android:textSize="20dp"
        android:layout_weight="1"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:entries="@array/FRUITS"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get your Crop Plan"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>
</LinearLayout>