<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Farm">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ORGANIC FARMING WELCOMES YOU"
            android:textSize="25dp"
            android:textColor="@color/brown"
            android:id="@+id/titlemove"
            android:gravity="center"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:fontFamily="@font/abril_fatface"/>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/crop_suggestion"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="126dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:src="@drawable/suggestimage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:text="CROP SUGGESTION"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/crop_plan"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="126dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:src="@drawable/plan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="CROP PLAN"
                android:textStyle="bold"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/manure"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:src="@drawable/manure" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="PREPARE MANURES"
                android:textStyle="bold"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/farm_methods"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:src="@drawable/method" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:text="OTHER METHODS"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
