<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_20"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:background="@color/cardview_shadow_end_color"
        app:cardCornerRadius="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Arrival Date:"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:hint="Arrival Date"
            android:id="@+id/adate"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Commodity:"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:hint="commodity"
            android:id="@+id/comm"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="State:"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:hint="state"
            android:id="@+id/state"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="District:"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:hint="dist"
            android:id="@+id/dist"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Market:"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:hint="market"
            android:id="@+id/market"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Variety:"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:id="@+id/variety"
            android:hint="variety"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Maximum Price:"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:hint="maxprice"
            android:id="@+id/maxprice"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Minimum Price:"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:hint="min price"
            android:id="@+id/minprice"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Modal Price:"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:hint="modal"
            android:id="@+id/modal"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Time:"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:hint="time"
            android:id="@+id/time"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
    </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>